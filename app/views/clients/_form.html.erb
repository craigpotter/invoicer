<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :county %>
    <%= f.input :postcode %>
    <%= f.input :country, as: :string %>
    <%= f.input :tax_number %>
    <%= f.input :phone %>
    <%= f.input :email %>
    <%= f.input :website %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
