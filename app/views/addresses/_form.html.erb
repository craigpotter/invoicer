<%= simple_form_for(@address) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :business_name %>
    <%= f.input :address %>
    <%= f.input :address2 %>
    <%= f.input :city %>
    <%= f.input :county %>
    <%= f.input :country, as: :string %>
    <%= f.input :postcode %>
    <%= f.input :phone %>
    <%= f.input :fax %>
    <%= f.input :mobile %>
    <%= f.input :website %>
    <%= f.input :email %>
    <%= f.input :bank_details %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
